<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView13"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView13"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_flipper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="99dp"
        android:gravity="center"
        android:text="Bienvenidos!"
        android:textColor="@color/golden"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_flipper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Misión:\n Para el año 2022, CarRental Group será el principal proveedor mundial de productos de alta calidad y servicios de primera calidad para la movilidad individual."
        android:textColor="@color/golden"
        android:textSize="50px"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textView12"
        app:layout_constraintTop_toBottomOf="@id/v_flipper" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_flipper"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="196dp"
        android:gravity="center"
        android:text=" Visión:\n Para llegar a ser aún mejor. Gracias a nuestro enfoque inquebrantable en lo premiun, los coches y motocicletas del CarRental Group  inspiran a más personas de todo el mundo que nunca antes. !"
        android:textColor="@color/golden"
        android:textSize="50px"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/v_flipper"
        tools:layout_editor_absoluteX="60dp" />


</androidx.constraintlayout.widget.ConstraintLayout>